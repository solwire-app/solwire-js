{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2022", "dom"],
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
